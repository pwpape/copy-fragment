{
    "name": "App name",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Your description",
    "permissions": [
      "contextMenus",
      "activeTab",
      "*://*/*"
     ],
     "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }],
    "background": { 
      "scripts": ["background.js"]
    }
}

